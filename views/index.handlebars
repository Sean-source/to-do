<div class="container">
    <header class="header">
        <p class="header-title">
            __TO DO LIST
            <svg class="bi bi-check-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                    d="M15.354 2.646a.5.5 0 010 .708l-7 7a.5.5 0 01-.708 0l-3-3a.5.5 0 11.708-.708L8 9.293l6.646-6.647a.5.5 0 01.708 0z"
                    clip-rule="evenodd" />
                <path fill-rule="evenodd"
                    d="M8 2.5A5.5 5.5 0 1013.5 8a.5.5 0 011 0 6.5 6.5 0 11-3.25-5.63.5.5 0 11-.5.865A5.472 5.472 0 008 2.5z"
                    clip-rule="evenodd" />
            </svg>
        </p>

    </header>
    <hr>
    <br>
    <br>
</div>
<div class="container">
    <div class="row">

        <div class="col-sm-4">
            <h4>Add new</h4>
            <br>

            <h6>Title</h6>
            <input type="text" id="items">
            <br>
            <br>
            <h6>Description</h6>
            <textarea name="" id="description" cols="30" rows="10"></textarea>
            <button class="btn btn-primary" id="add-item">Add new to-do</button>

        </div>

        <div class="col-sm-4">
            <h4>Pending Items</h4>
            <ol>
                <br>
                {{#each actionitems}}
                {{#unless complete}}


                <li>
                    <h6>{{name}}</h6>
                    <p>{{description}}</p>
                    <button class="btn btn-primary update-item" data-id="{{id}}" data-complete="{{complete}}">Task
                        Complete</button>


                </li>

                <hr>

                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col-sm-4">
            <h4>Completed Items</h4>
            <ol>
                {{#each actionitems}}
                {{#if complete}}
                <li>
                    <h6>{{name}}</h6>
                    <p>{{description}}</p>
                    <button class="btn-xs btn-danger delete-item" data-id="{{id}}" data-complete="{{complete}}">
                        <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                            xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z" />
                            <path fill-rule="evenodd"
                                d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"
                                clip-rule="evenodd" />
                        </svg></button>
                    <hr>
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
</div>